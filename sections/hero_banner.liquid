<section 
  class="hero-banner"
  style="
    background-image: url({{ section.settings.bg_image | image_url }});
    min-height: {{ section.settings.banner_height }}px;
  "
>
  <div class="hero-banner-overlay"></div>

  <div class="hero-banner-content">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <p>{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-banner-btn{% if section.settings.hero_banner_btn_outline %} outline{% endif %}">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.hero-banner {
  position: relative;
  width: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  margin: 0;
}

.hero-banner-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.45);
  z-index: 1;
}

.hero-banner-content {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: auto;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 20px;
  color: #fff;
}

.hero-banner-content h1 {
  font-size: 48px;
  margin-bottom: 16px;
}

.hero-banner-content p {
  font-size: 20px;
  margin-bottom: 24px;
  max-width: 800px;
}

.hero-banner-btn {
  display: inline-block;
  padding: 14px 40px;
  font-size: 18px;
  font-weight: 500;
  text-decoration: none;
  border: none;
  cursor: pointer;
  background-color: #000;
  color: #fff;
  transition: all 0.3s ease;
}

.hero-banner-btn:hover {
  background-color: #e5e5e5;
  color: #000;
}

.hero-banner-btn.outline {
  background: transparent;
  color: #000;
  border: 2px solid #898b8f;
}

.hero-banner-btn.outline:hover {
  background: #000;
  color: #fff;
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .hero-banner-content h1 {
    font-size: 36px;
  }

  .hero-banner-content p {
    font-size: 18px;
  }

  .hero-banner-btn {
    font-size: 16px;
    padding: 12px 30px;
  }
}


 @media (max-width: 768px) {
  .hero-banner {
    display: block; 
  }

  .hero-banner-image-wrapper {
    position: relative; 
    width: 100%;
    height: auto;
  }

  .hero-banner-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .hero-banner-content {
    position: static;   
    background: none;  
    color: #000;       
    text-align: center;
    padding: 20px 15px;
  }

  .hero-banner-content h1 {
    font-size: 28px;
    margin-top: 15px;
    margin-bottom: 10px;
  }

  .hero-banner-content p {
    font-size: 16px;
    margin-bottom: 15px;
  }

  .hero-banner-btn {
    display: inline-block;
    font-size: 14px;
    padding: 10px 25px;
  }
}

@media (max-width: 480px) {
  .hero-banner-content h1 {
    font-size: 22px;
  }

  .hero-banner-content p {
    font-size: 14px;
  }

  .hero-banner-btn {
    font-size: 14px;
    padding: 8px 20px;
  }
}

</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "banner_height",
      "label": "Banner Height (px)",
      "min": 100,
      "max": 800,
      "step": 10,
      "default": 400
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover our latest collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "checkbox",
      "id": "hero_banner_btn_outline",
      "label": "Outline Button",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
