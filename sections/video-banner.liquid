<div class="hero_video_timer">
<div class="{% if section.settings.container_type == 'container_box' %}container_box{% else %}full_width{% endif %}">
  <section
    class="hero-video"
    style="min-height: {{ section.settings.banner_height }}px; padding-top: {{ section.settings.padding_top }}px; padding-bottom:{{ section.settings.padding_bottom }}px"
  >

    {% if section.settings.desktop_video != blank %}
      {{ section.settings.desktop_video | video_tag:
        autoplay: true,
        muted: true,
        loop: true,
        playsinline: true,
        class: 'hero-video-media desktop-video'
      }}
    {% endif %}

    {% if section.settings.mobile_video != blank %}
      {{ section.settings.mobile_video | video_tag:
        autoplay: true,
        muted: true,
        loop: true,
        playsinline: true,
        class: 'hero-video-media mobile-video'
      }}
    {% endif %}

    {% if section.settings.show_overlay %}
      <div class="hero-video-overlay"></div>
    {% endif %}

    <div class="hero-video-content">

      {% if section.settings.subtitle != blank %}
        <p>{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.show_buttons %}
        <div class="hero-video-buttons">
          {% if section.settings.button_1_text != blank %}
            <a href="{{ section.settings.button_1_link }}" class="hero-btn">
              {{ section.settings.button_1_text }}
            </a>
          {% endif %}

          {% if section.settings.button_2_text != blank %}
            <a href="{{ section.settings.button_2_link }}" class="hero-btn outline">
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}

    </div>
  </section>
</div>

<div class="richtext-timer">

<div class="container_box timer_inner">

<div class="richtext-content">
  {% if section.settings.richtext_heading != blank %}
        <h1>{{ section.settings.richtext_heading }}</h1>
  {% endif %}

  {% if section.settings.richtext_button_text != blank %}
        <a href="{{ section.settings.richtext_button_link }}" class="timer-btn">
          {{ section.settings.richtext_button_text }}
         </a>
  {% endif %}
</div>

<div class="timer-box">

  <div class="timer">
      <div class="days">
          <span class="days_left">0</span>
          Days
      </div>
      <div class="hours">
          <span class="hours_left">0</span>
          Hours
      </div>
      <div class="mins">
          <span class="mins_left">0</span>
          Min
      </div>
      <div class="secs">
          <span class="secs_left">0</span>
          Sec
      </div>
                    
  </div>
</div>
</div>

</div>

</div>



<script>
document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.hero_video_timer').forEach(section => {
    const endDate = new Date("2026-02-01T00:00:00").getTime();

    const daysEl  = section.querySelector('.days_left');
    const hoursEl = section.querySelector('.hours_left');
    const minsEl  = section.querySelector('.mins_left');
    const secsEl  = section.querySelector('.secs_left');

    if (!daysEl) return;

    setInterval(() => {
      const now = new Date().getTime();
      const diff = endDate - now;
      if (diff <= 0) return;

      daysEl.textContent  = Math.floor(diff / (1000 * 60 * 60 * 24));
      hoursEl.textContent = Math.floor((diff / (1000 * 60 * 60)) % 24);
      minsEl.textContent  = Math.floor((diff / (1000 * 60)) % 60);
      secsEl.textContent  = Math.floor((diff / 1000) % 60);
    }, 1000);
  });
});
</script>









<style>




.hero_video_timer {
  background-color: #f9f9f9;
}


.full_width {
  width: 100vw;
  max-width: 100vw;
  margin-left: calc(-50vw + 50%);
  margin-right: calc(-50vw + 50%);
}

.container_box {
  max-width: 1400px;
  width: 100%;
  margin: 0 auto;
  padding: 0 20px;
}



.hero-video {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.hero-video-media {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 0;
}

.desktop-video { display: block; }
.mobile-video { display: none; }

.hero-video-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 1;
}

.hero-video-content {
  position: relative;
  z-index: 2;
  min-height: inherit;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 20px;
  color: #fff;
}

.hero-video-content h1,
.richtext-content h1 {
  font-size: 42px;
  margin-bottom: 14px;
}

.hero-video-content p {
  font-size: 20px;
  margin-bottom: 26px;
  max-width: 800px;
}

.hero-video-buttons {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
  justify-content: center;
}

.hero-btn,
.timer-btn {
  padding: 12px 30px;
  font-size: 16px;
  background: #000;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.hero-btn:hover,
.timer-btn:hover {
  background: #fff;
  color: #000;
}

.hero-btn.outline {
  background: transparent;
  border: 2px solid #bf2121;
  color: #bf2121;
}

.hero-btn.outline:hover {
  background: #bf2121;
  color: #fff;
}



.richtext-timer {
  width: 100vw;
  max-width: 100vw;
  margin-left: calc(-50vw + 50%);
  margin-right: calc(-50vw + 50%);
  background-color: #f9f9f9;
}


.timer_inner {
  max-width: 1400px;
  margin: 0 auto;
  padding: 40px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
}



.timer {
  display: flex;
  gap: 20px;
}


.timer > div {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fbe6d7;
  color: #000;
  width: 120px;
  min-height: 120px;
  padding: 20px;
  font-size: 24px;       
  font-weight: 400;     
  letter-spacing: 0.5px;
}


.timer > div span {
  font-size: 50px;
  font-weight: 500;
  line-height: 1;
  margin-bottom: 6px;
}



@media (max-width: 1024px) {
  .hero-video-content h1,
  .richtext-content h1 {
    font-size: 34px;
  }

  .hero-video-content p {
    font-size: 18px;
  }

  .timer > div {
    width: 110px;
    min-height: 105px;
  }

  .timer > div span {
    font-size: 34px;
  }
}



@media (max-width: 768px) {
  .desktop-video { display: none; }
  .mobile-video { display: block; }

  .hero-video {
    min-height: auto !important;
  }

  .hero-video-media {
    position: relative;
    height: auto;
  }

  .hero-video-overlay {
    display: none;
  }

  .hero-video-content {
    color: #000;
  }

  .hero-video-content h1,
  .richtext-content h1 {
    font-size: 26px;
  }

  .hero-video-content p {
    font-size: 16px;
  }

  .hero-video-buttons {
    flex-direction: column;
  }



  .timer {
    flex-wrap: nowrap;         
    justify-content: center;
    gap: 10px;
  }

  .timer > div {
    width: 70px;
    min-height: 80px;
    padding: 10px;
  }

  .timer > div span {
    font-size: 24px;
  }

  .timer > div {
    font-size: 11px;
  }


  .timer-box {
    order: 1;
  }

  .richtext-content {
    order: 2;
    margin-top: 10px;
  }

  .timer_inner {
    flex-direction: column;
    text-align: center;
  }

  .timer {
    justify-content: center;
    flex-wrap: wrap;
    padding: 15px 0;
  }
  .richtext-timer {
    padding-top: 0;
  }
}



@media (max-width: 480px) {
  .hero-video-content h1,
  .richtext-content h1 {
    font-size: 22px;
  }

  .timer > div {
    width: 80px;
    min-height: 90px;
    padding: 12px;
    font-size: 12px;
  }

  .timer > div span {
    font-size: 26px;
  }
}


</style>

