<div class="discount-timer" 
     style="margin-top: {{ section.settings.section_margin_top }}px; 
            margin-bottom: {{ section.settings.section_margin_bottom }}px;">

  <div class="{{ section.settings.container_type }} discount-timer-container" 
       style="position: relative; padding-top: {{ section.settings.section_padding_top }}px; 
              padding-bottom: {{ section.settings.section_padding_bottom }}px;">

    <div class="discount-timer-inner">
      <div class="discount-timer-content">
        {% if section.settings.richtext_heading != blank %}
          <h2>{{ section.settings.richtext_heading }}</h2>
        {% endif %}
        {% if section.settings.richtext_button_text != blank %}
          <div class="discount-timer-btn">
            <a href="{{ section.settings.richtext_button_link }}">
              {{ section.settings.richtext_button_text }}
            </a>
          </div>
        {% endif %}
      </div>

      <div class="discount-timer-box">
        <div class="discount-timer-units">
          <div class="discount-days">
            <span class="discount-days-left">0</span>
            Days
          </div>
          <div class="discount-hours">
            <span class="discount-hours-left">0</span>
            Hours
          </div>
          <div class="discount-mins">
            <span class="discount-mins-left">0</span>
            Min
          </div>
          <div class="discount-secs">
            <span class="discount-secs-left">0</span>
            Sec
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.discount-timer').forEach(section => {

  
    let date = "{{ section.settings.timer_end_date }}";
    let time = "{{ section.settings.timer_end_time }}"; 

    
    let parts = time.split(':');
    let hour = parts[0] ? parseInt(parts[0], 10) : 0;
    let minute = parts[1] ? parseInt(parts[1], 10) : 0;

   
    if(hour < 10) hour = "0" + hour;
    if(minute < 10) minute = "0" + minute;

    const endDate = new Date(`${date}T${hour}:${minute}:00`).getTime();

    const daysEl  = section.querySelector('.discount-days-left');
    const hoursEl = section.querySelector('.discount-hours-left');
    const minsEl  = section.querySelector('.discount-mins-left');
    const secsEl  = section.querySelector('.discount-secs-left');

    if (!daysEl || isNaN(endDate)) return;

    setInterval(() => {
      const now = new Date().getTime();
      const diff = endDate - now;

      if (diff <= 0) {
        daysEl.textContent  = 0;
        hoursEl.textContent = 0;
        minsEl.textContent  = 0;
        secsEl.textContent  = 0;
        return;
      }

      daysEl.textContent  = Math.floor(diff / (1000 * 60 * 60 * 24));
      hoursEl.textContent = Math.floor((diff / (1000 * 60 * 60)) % 24);
      minsEl.textContent  = Math.floor((diff / (1000 * 60)) % 60);
      secsEl.textContent  = Math.floor((diff / 1000) % 60);
    }, 1000);

  });
});
</script>

<style>

