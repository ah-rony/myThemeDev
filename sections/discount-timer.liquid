        flex-direction: column; 
        text-align: center; 
        gap: 20px;
        padding: 10px 20px;
    }

    .discount-timer-box { 
        order: 1; 
        justify-content: center;
        padding: 0; 
    }

    .discount-timer-content { 
        order: 2; 
        text-align: center; 
        align-items: center;
        padding-top: 0;
    }

    .discount-timer-units > div { 
        width: 70px; 
        min-height: 80px; 
        padding: 10px; 
        font-size: 12px; 
    }

    .discount-timer-units > div span { 
        font-size: 24px; 
    }
}

@media (max-width: 480px) {
    .discount-timer-units > div { 
        width: 70px; 
        min-height: 80px; 
        padding: 8px; 
        font-size: 11px; 
    }

    .discount-timer-units > div span { 
        font-size: 22px; 
    }
}

.full_width {
    width: 100vw; 
    max-width: 100vw; 
    margin-left: calc(-50vw + 50%); 
    margin-right: calc(-50vw + 50%); 
}

.container_box { 
    max-width: 1400px; 
    width: 100%; 
    margin: 0 auto; 
    padding: 0 20px; 
}

</style>




