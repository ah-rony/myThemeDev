    flex-wrap: nowrap; 
    gap: 20px; 
    padding-top: 55px;
    padding-bottom: 54px;
}

.discount-timer-units {
    display: flex;
    gap: 20px; 
}

.discount-timer-units > div { 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    background: #fbe6d7; 
    color: #404C5C;
    width: 120px; 
    min-height: 120px; 
    font-size: 24px; 
    font-weight: 400; 
    line-height: 140%;
}

.discount-timer-units > div span { 
    font-size: 50px; 
    font-weight: 500; 
    margin-bottom: 6px; 
    color: #242A33;
    line-height: 100%;
}

.discount-timer-content { 
    display: flex; 
    flex-direction: column; 
    gap: 27px; 
    padding-top: 52px;
    padding-bottom: 50px;
}

.discount-timer-content h2 { 
    font-family: "Instrument Serif", serif;
    font-size: 40px; 
    font-weight: 400;
    color: #242A33;
}

.discount-timer-btn a { 
