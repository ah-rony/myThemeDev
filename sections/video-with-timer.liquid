<div class="video_with_timer {% if section.settings.container_type == 'container_box' %}container_box{% else %}full_width{% endif %}"
style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      "
>
  <section
    class="text-video"
    style="
      min-height: {{ section.settings.banner_height }}px;"
  >
    {% if section.settings.desktop_video != blank %}
      {{ section.settings.desktop_video | video_tag:
        autoplay: true,
        muted: true,
        loop: true,
        playsinline: true,
        class: 'text-video-media desktop-video'
      }}
    {% endif %}

    {% if section.settings.mobile_video != blank %}
      {{ section.settings.mobile_video | video_tag:
        autoplay: true,
        muted: true,
        loop: true,
        playsinline: true,
        class: 'text-video-media mobile-video'
      }}
    {% endif %}

    {% if section.settings.show_overlay %}
      <div class="text-video-overlay"></div>
    {% endif %}

    <div class="text-video-content text-align-{{ section.settings.video_text_align }}">
      {% if section.settings.subtitle != blank %}
        <p>{{ section.settings.subtitle }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.show_buttons %}
        <div class="text-video-buttons">
          {% if section.settings.button_1_text != blank %}
            <a href="{{ section.settings.button_1_link }}" class="hero-btn">
              {{ section.settings.button_1_text }}
            </a>
          {% endif %}
          {% if section.settings.button_2_text != blank %}
            <a href="{{ section.settings.button_2_link }}" class="hero-btn outline">
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </section>

  <div class="richtext-timer">
    <div class="timer_inner {% if section.settings.text_align_mobile == 'center' %}center-on-mobile{% endif %}">
      <div class="richtext-content">
        {% if section.settings.richtext_heading != blank %}
          <h2>{{ section.settings.richtext_heading }}</h2>
        {% endif %}
        {% if section.settings.richtext_button_text != blank %}
          <a href="{{ section.settings.richtext_button_link }}" class="timer-btn">
            {{ section.settings.richtext_button_text }}
          </a>
        {% endif %}
      </div>

      <div class="timer-box">
        <div class="timer">
          <div class="days">
            <span class="days_left">0</span>
            Days
          </div>
          <div class="hours">
            <span class="hours_left">0</span>
            Hours
          </div>
          <div class="mins">
            <span class="mins_left">0</span>
            Min
          </div>
          <div class="secs">
            <span class="secs_left">0</span>
            Sec
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.video_with_timer').forEach(section => {
    const endDate = new Date("2026-02-01T00:00:00").getTime();
    const daysEl  = section.querySelector('.days_left');
    const hoursEl = section.querySelector('.hours_left');
    const minsEl  = section.querySelector('.mins_left');
    const secsEl  = section.querySelector('.secs_left');
    if (!daysEl) return;

    setInterval(() => {
      const now = new Date().getTime();
      const diff = endDate - now;
      if (diff <= 0) return;
      daysEl.textContent  = Math.floor(diff / (1000*60*60*24));
      hoursEl.textContent = Math.floor((diff / (1000*60*60)) % 24);
      minsEl.textContent  = Math.floor((diff / (1000*60)) % 60);
      secsEl.textContent  = Math.floor((diff / 1000) % 60);
    }, 1000);
  });
});
</script>

<style>
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Instrument+Serif:ital@0;1&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Instrument+Serif:ital@0;1&family=Outfit:wght@100..900&display=swap');

    *{
         font-family: "Outfit", sans-serif;
    }
.video_with_timer { 
    background-color: #f9f9f9; 
}

.full_width {
    width: 100vw; 
    max-width: 100vw; 
    margin-left: calc(-50vw + 50%); 
    margin-right: calc(-50vw + 50%); 
}
.container_box { 
    max-width: 1400px; 
    width: 100%; 
    margin: 0 auto; 
    padding: 0 20px; 
}

.text-video { 
    position: relative; 
    width: 100%; 
    overflow: hidden; 
}
.text-video-media { 
    position: absolute; 
    inset: 0; 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
    z-index: 0; 
}
.desktop-video { 
    display: block; 
} 
.mobile-video { 
    display: none; 
}
.text-video-overlay { 
    position: absolute; 
    inset: 0; 
    background: rgba(0,0,0,0.45); 
    z-index: 1; 
}



.text-video-content {
    position: absolute;
    top: {{ section.settings.hero_content_offset_top }}px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
    padding: 20px;
    color: #fff;
    text-align: center;
}


.hero-align-top { 
    justify-content: flex-start; 
}
.hero-align-center { 
    justify-content: center; 
}
.hero-align-bottom { 
    justify-content: flex-end; 
}

.text-align-left { 
    text-align: left; 
    align-items: flex-start; 
}
.text-align-center { 
    text-align: center; 
    align-items: center; 
}
.text-align-right { 
    text-align: right; 
    align-items: flex-end; 
}

.text-video-content h1 {
    font-family: "Instrument Serif", serif;
    color: #ffffff;
    font-size: 72px; 
    font-weight: 400;
    line-height: 120%;
    margin-bottom: 26px; 
}
.text-video-content p { 
    color: #ffffff;
    font-size: 24px; 
    font-weight: 400;
    line-height: 140%;
    letter-spacing: 6px;
    max-width: 800px; 
}

.text-video-buttons { 
    display: flex; 
    gap: 24px; 
    flex-wrap: wrap; 
    justify-content: center; 
}
.hero-btn, 
.timer-btn { 
    padding: 14px 24px; 
    font-size: 14px;
    font-weight: 500; 
    background: #FFB686; 
    color: #242A33; 
    text-decoration: none; 
    transition: all 0.3s ease; 
    line-height: 140%;
}


.text-video-buttons a.hero-btn:first-child{
    line-height: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}


.hero-btn:hover, 
.timer-btn:hover { 
    background: #FFB686; 
    color: #242A33; 
}
.hero-btn.outline { 
    background: transparent; 
    border: 1px solid #FFB686; 
    color: #ffffff; 
}
.hero-btn.outline:hover { 
    background: #FFB686; 
    color: #ffffff; 
}

.richtext-timer { 
    width: 100%; 
    background: #f9f9f9; 
    margin-top: 0; 
}
.timer_inner { 
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
    gap: 40px; 
    flex-wrap: nowrap; 
    max-width: 1400px; 
    margin: 0 auto; 
}
.timer-box { 
    display: flex; 
    flex-wrap: nowrap; 
    gap: 20px; 
    padding-top: 55px;
    padding-bottom: 54px;
}


.timer {
    display: flex;
    gap: 20px; 
}



.timer > div { 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    background: #fbe6d7; 
    color: #404C5C;
    width: 120px; 
    min-height: 120px; 
    font-size: 24px; 
    font-weight: 400; 
    line-height: 140%;
}
.timer > div span { 
    font-size: 50px; 
    font-weight: 500; 
    margin-bottom: 6px; 
    color: #242A33;
    line-height: 100%;
}

.richtext-content { 
    display: flex; 
    flex-direction: column; 
    gap: 27px; 
    padding-top: 52px;
    padding-bottom: 50px;
}
.richtext-content h2 { 
    font-family: "Instrument Serif", serif;
    font-size: 40px; 
    font-weight: 400;
    color: #242A33;
}
.timer-btn { 
    width: max-content; 
}

@media (max-width: 1024px) {
    .text-video-content h1 {
         font-size: 56px; 
        }
    .text-video-content p { 
        font-size: 18px; 
    }

    .timer_inner {
    margin: 0 20px;
    }
    .timer > div {
         width: 110px; 
         min-height: 105px; 
        }
    .timer > div span {
         font-size: 34px; 
        }
}



@media (max-width: 768px) {
    .desktop-video { 
        display: none; 
    } 
    .mobile-video { 
        display: block; 
    }
    .text-video { 
        min-height: auto !important; 
    } 
    .text-video-media { 
        position: relative; 
        height: auto; 
    }
    .text-video-overlay { 
        display: none; 
    } 

   
    .text-video-content {
        position: relative;
        top: 0;
        display: flex;
        flex-direction: column;
        align-items: center; 
        justify-content: center; 
        height: auto;
        color: #000;
        text-align: center;
        padding: 20px 0;
    }

    .text-video-buttons {
        flex-direction: column; 
        align-items: center;    
    }

    .hero-btn,
    .hero-btn.outline {
        width: auto; 
        max-width: 100%; 
        color: #242A33;
    }

    .text-video-content h1 { 
        font-size: 40px;
        color:#242A33 ; 
    } 
    .text-video-content p { 
        font-size: 16px; 
        color: #242A33;
    }

    .timer_inner { 
        flex-direction: column; 
        text-align: center; 
        gap: 20px;
        padding: 10px 20px;
    }
    .timer-box { 
        order: 1; 
        justify-content: center;
        padding: 0; 
    }
    .richtext-content { 
        order: 2; 
        text-align: center; 
        align-items: center;
        padding-top: 0;
    }
    .timer > div { 
        width: 70px; 
        min-height: 80px; 
        padding: 10px; 
        font-size: 12px; 
    }
    .timer > div span { 
        font-size: 24px; 
    }
}



@media (max-width: 480px) {
    .text-video-content h1 { 
        font-size: 40px; 
    }
    .timer > div { 
        width: 70px; 
        min-height: 80px; 
        padding: 8px; 
        font-size: 11px; 
    }
    .timer > div span { 
        font-size: 22px; 
    }
}



</style>

