      "type": "range",
      "id": "section_padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "default":0

    },

    {
      "type": "range",
      "id": "section_margin_top",
      "label": "Margin Top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "section_margin_bottom",
      "label": "Margin Bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },

    {
      "type": "text",
      "id": "richtext_heading",
