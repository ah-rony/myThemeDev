  }

  .card-content-{{ section.id }} {
    padding: 32px;
    justify-content: flex-start;
    height: 50%;
  }
  
  .card-content-{{ section.id }} h3 {
    font-size: 24px;
    margin-bottom: 24px;
  }
  
  .badge-{{ section.id }} {
    margin-bottom: 16px;
  }
}

@media (max-width: 992px) {
  .parallax-section-{{ section.id }} {
    height: auto;
    min-height: auto;
    padding: 80px 0;
  }

  .parallax-container-{{ section.id }} {
    height: auto;
  }

  .parallax-cards-{{ section.id }} {
    flex-direction: column;
    align-items: center;
    gap: 32px;
    height: auto;
  }

  .card-{{ section.id }} {
    width: 80%;
    max-width: 600px;
    flex-direction: column;
    height: 500px;
  }

  .card-img-{{ section.id }} {
    height: 50%;
  }

  .card-content-{{ section.id }} {
    padding: 32px;
    height: 50%;
  }
  
  .card-content-{{ section.id }} h3 {
    font-size: 24px;
  }
}

@media (max-width: 768px) {
  .parallax-section-{{ section.id }} {
    padding: 60px 0;
  }

  .parallax-cards-{{ section.id }} {
    flex-direction: column;
    gap: 32px;
    padding: 0 16px;
  }

  .card-{{ section.id }} {
    width: 100%;
    max-width: 400px;
    flex-direction: column;
    height: 450px;
  }

  .card-img-{{ section.id }} img {
    width: 100%;
    height: 100%;
  }

  .card-content-{{ section.id }} {
    padding: 24px;
  }

  .card-content-{{ section.id }} h3 {
    font-size: 22px;
    margin-bottom: 20px;
  }

  .card-link-{{ section.id }} {
    font-size: 14px;
  }

  .badge-{{ section.id }} {
    font-size: 14px;
    padding: 6px 12px;
    margin-bottom: 16px;
  }
}

@media (max-width: 480px) {
  .parallax-section-{{ section.id }} {
    padding: 40px 0;
  }

  .parallax-cards-{{ section.id }} {
    gap: 24px;
  }

  .card-{{ section.id }} {
    height: 400px;
  }

  .card-content-{{ section.id }} {
    padding: 20px;
  }

  .card-content-{{ section.id }} h3 {
    font-size: 20px;
    margin-bottom: 16px;
  }

  .badge-{{ section.id }} {
    font-size: 12px;
    padding: 4px 10px;
    margin-bottom: 12px;
  }

  .card-link-{{ section.id }} {
    font-size: 14px;
  }
}

/* Touch device optimization */
@media (hover: none) and (pointer: coarse) {
  .card-{{ section.id }}:hover {
    transform: none;
  }
  
  .card-link-{{ section.id }}:hover {
    opacity: 1;
  }
}

/* Reduced motion preference */
@media (prefers-reduced-motion: reduce) {
  .card-{{ section.id }},
  .card-img-{{ section.id }} img,
  .card-link-{{ section.id }} {
    transition: none;
  }
}
</style>


<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('.parallax-section-{{ section.id }}');
  if (!section) return;
  
  const container = section.querySelector('.parallax-container-{{ section.id }}');
  const bg = section.querySelector('.parallax-bg-{{ section.id }}');

  function updateParallax() {
    if (!container || !bg) return;
    
    const rect = container.getBoundingClientRect();
    const viewportHeight = window.innerHeight;
    const containerTop = rect.top;
    
    // Calculate progress based on container position in viewport
    const progress = -containerTop / viewportHeight;
    const maxMove = {{ section.settings.parallax_intensity | default: 80 }};
    
    // Smooth parallax effect
    const offset = progress * maxMove;
    bg.style.transform = `translateY(${offset}px)`;
  }

  // Throttle scroll events for performance
  let ticking = false;
  window.addEventListener('scroll', function() {
    if (!ticking) {
      window.requestAnimationFrame(function() {
        updateParallax();
        ticking = false;
      });
      ticking = true;
    }
  });

  // Initial update
  updateParallax();
  
  // Update on resize
  window.addEventListener('resize', updateParallax);
  
  // Initialize Intersection Observer for better performance
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        updateParallax();
      }
    });
  }, {
    threshold: 0.1
  });
  
  observer.observe(section);
});
</script>

