  "name": "Animated DevFooter",
  "settings": [
    {
      "type": "color",
      "id": "devfooter_bg_color",
      "label": "DevFooter Background Color",
      "default": "#4478e3"
    },
    {
      "type": "color",
      "id": "devfooter_wave_color",
      "label": "Wave Color",
      "default": "#4478e3"
    },
    {
      "type": "color",
      "id": "devfooter_drop_color",
      "label": "Drop Color",
      "default": "#4478e3"
    },
    {
      "type": "color",
      "id": "devfooter_text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "devfooter_text",
      "label": "DevFooter Text",
      "default": "done with fun - by Uwe Chardon"
    }
  ],
  "presets": [
    {
      "name": "Animated DevFooter"
    }
  ]
}
{% endschema %}

